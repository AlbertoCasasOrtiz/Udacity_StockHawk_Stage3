<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_detail_list_item"
    android:gravity="center_vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryLight"
    android:baselineAligned="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_sublayout"
        android:gravity="start"
        android:orientation="vertical"
        android:background="@color/colorPrimaryLight"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/symbol_widget"
            style="@style/StockSymbolTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/ap_white"
            android:textSize="20sp"
            tools:text="MSFT"
            />

        <TextView
            android:id="@+id/name_widget"
            style="@style/StockSymbolTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/ap_white"
            android:textSize="12sp"
            tools:text="MSFT"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/widget_sublayout2"
        android:gravity="end"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:background="@color/colorPrimaryLight"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/price_widget"
            android:textAlignment="center"
            android:padding="2dp"
            android:textSize="15sp"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ap_white"
            tools:text="$1000.00"/>

        <TextView
            android:id="@+id/change_widget"
            android:textAlignment="center"
            android:padding="2dp"
            android:textSize="15sp"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ap_white"
            tools:text="0.5%" />


    </LinearLayout>
</LinearLayout>